extends ../layouts/common.pug

block content
    h1 Login
    
    if err
        each errs in err
            .alert.alert-danger= errs
    form(action="/auth/login" method="POST")
        .form-group
            label(for='email') Email
            input#email.form-control(type="text" name="email" class="ml-2" value=values ? values.email : "")
        .form-group
            label(for='password') Password
            input#password.form-control(type="text" name="password" class="ml-2" value=values ? values.password : "")
            
        button(class="btn btn-primary ml-3") Login       